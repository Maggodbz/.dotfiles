;; Battery
(defpoll BATTERY :interval "10s"
  "~/.config/eww/widgets/battery/battery.sh")

(defwidget battery []
  (box :spacing 2 :tooltip {BATTERY.tooltip}
    (image :icon {BATTERY.icon} :icon-size "small-toolbar")
    (label :class "battery" 
           :text {BATTERY.percentage}
           :style {BATTERY.style}))) 